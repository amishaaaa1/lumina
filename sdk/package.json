{
  "name": "@lumina/insurance-sdk",
  "version": "1.0.0",
  "description": "SDK for integrating Lumina Protocol insurance into prediction markets",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup index.ts --format cjs,esm --dts",
    "dev": "tsup index.ts --format cjs,esm --dts --watch",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "lumina",
    "insurance",
    "prediction-markets",
    "defi",
    "bnb-chain",
    "web3",
    "blockchain"
  ],
  "author": "Lumina Protocol",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lumina-protocol/sdk"
  },
  "peerDependencies": {
    "viem": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./react": {
      "import": "./dist/react.mjs",
      "require": "./dist/react.js",
      "types": "./dist/react.d.ts"
    }
  }
}
